<core:FragmentDefinition
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:f="sap.ui.layout.form"
  xmlns:l="sap.ui.layout"
>
  <VBox>
    <FormattedText htmlText="{description}" />
    <List mode="None" headerText="{title}" items="{criterions}" class="sapUiSmallMarginBotton">
      <StandardListItem title="{title}" description="{text}" wrapping="true" info="{category}" />
    </List>
    <HBox>
      <Button text="Заново" press="onRestart" class="sapUiSmallMarginEnd" />
    </HBox>
  </VBox>
</core:FragmentDefinition>